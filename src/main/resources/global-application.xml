<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
classpath:/org/springframework/beans/factory/xml/spring-beans-4.0.xsd
http://www.springframework.org/schema/util
classpath:/org/springframework/beans/factory/xml/spring-util-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="dbConf" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="file:/config/oracle.conf" />
    </bean>

    <bean id="sqlFile" class="java.lang.String">
        <constructor-arg value="/sql/" />
    </bean>


    <bean id="mainObject" class="com.akamai.nsecore.service.ProcessLoadData$">
        <property name="silentMode" value="false" />
    </bean>

    <bean id="BatchEnv" class="org.apache.flink.api.java.ExecutionEnvironment" factory-method="getExecutionEnvironment">
    </bean>

    <bean id="streamEnv" class="org.apache.flink.streaming.api.environment.StreamExecutionEnvironment" factory-method="getExecutionEnvironment" />

    <bean id="table" class="org.apache.flink.api.scala.ExecutionEnvironment">
        <constructor-arg ref="ExEnv"/>
        <property name="parallelism" value="1"/>
    </bean>


    <bean id="zookeeper" class="java.lang.String"><constructor-arg value="${zookeeper}"/></bean>
    <bean id="kafka" class="java.lang.String"><constructor-arg value=""/></bean>
    <bean id="group-id" class="java.lang.String"><constructor-arg value=""/></bean>
    <bean id="topic" class="java.lang.String"><constructor-arg value=""/></bean>

    <bean id="file" class="java.lang.String"><constructor-arg value="/usr/local/akamai/com.akamai.nsecore/data/"/></bean>

    <bean id="jdbcsource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${driver}" />
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
        <property name="url" value="${url}"/>
    </bean>

    <bean id="kafkasource" class="org.apache.commons.dbcp.BasicDataSource">
        <constructor-arg ref="zookeeper"/>
        <constructor-arg ref="kafka"/>
        <constructor-arg ref="group-id"/>
        <constructor-arg ref="topic"/>
    </bean>

    <bean id="customJdbcLoad" class="com.akamai.nsecore.connectors.jdbc.jdbcCustomLoad">
        <constructor-arg name="username" value="${user}" />
        <constructor-arg name="password" value="${password}" />
        <constructor-arg name="dbURL" value="${url}" />
        <constructor-arg name="driver" value="${driver}" />
        <constructor-arg ref="sqlFile" />
    </bean>
